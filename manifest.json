{
    "manifest_version": 3,
    "name": "Mobile Switcher",
    "version": "1.0",
    "description": "Preview the current webpage in a mobile device frame",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/mobile.png",
            "48": "icons/mobile.png",
            "128": "icons/mobile.png"
        }
    },
    "icons": {
        "16": "icons/mobile.png",
        "48": "icons/mobile.png",
        "128": "icons/mobile.png"
    }
}